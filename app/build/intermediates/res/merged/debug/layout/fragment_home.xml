<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cht.iot.chtiotapp.fragment.HomeFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:src="@drawable/iot_featured_image" />

        <TextView
            android:text="@string/iot_platform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

        <Button
            android:text="我的設備"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/deviceButton" />

        <TextView
            android:text="管理 IoT 平台專案的設備、感測器與感測器數據"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_marginBottom="16dp" />

        <TextView
            android:text="連結 IoT 產品設備"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

        <Button
            android:text="設備納管"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/registryButton" />

        <TextView
            android:text="將 IoT 產品設備加入 IoT 專案"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" />
    </LinearLayout>

</FrameLayout>
